{
    "version": "2.0.0",
    "presentation": {
        "echo": false,
        "showReuseMessage": false,
        "clear": true
    },
    "tasks": [
        {
            "label": "Run App",
            "type": "shell",
            "command": "nix develop --command bash -c '${workspaceFolder}/run.sh'",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Install Module from Selection",
            "type": "shell",
            "command": "nix develop --command bash -c  'poetry add ${selectedText}'"
        },
        {
            "label": "Uninstall Module from Selection",
            "type": "shell",
            "command": "nix develop --command bash -c 'poetry remove ${selectedText}'"
        }
    ]
}